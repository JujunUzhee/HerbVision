<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/logoLayout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <!-- Logo Daun (Kiri) -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/logo_rabiku"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Teks Tengah -->
    <LinearLayout
        android:id="@+id/textContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@id/logoImageView"
        app:layout_constraintEnd_toStartOf="@id/univLogoImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/herbTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rozha_one"
            android:text="@string/herb"
            android:textColor="#4CAF50"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/visionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rozha_one"
            android:text="@string/vision"
            android:textColor="#795548"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- Logo Universitas (Kanan) -->
    <ImageView
        android:id="@+id/univLogoImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/logo_univ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
